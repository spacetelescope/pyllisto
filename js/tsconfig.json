{
  "compilerOptions": {
    "declaration": true,
    // "noImplicitAny": true,
    "skipLibCheck": true, // TEMPORARY WORKAROUND
    "baseUrl": ".",
    "sourceMap": true,
    "lib": ["dom", "es5", "es2015.promise", "es2015.iterable"],
    // "types": ["requirejs"],
    "noEmitOnError": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}